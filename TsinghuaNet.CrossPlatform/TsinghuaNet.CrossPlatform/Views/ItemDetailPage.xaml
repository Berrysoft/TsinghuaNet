<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TsinghuaNet.CrossPlatform.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="IP地址：" FontSize="Medium" />
        <Label Text="{Binding Item.Address}" FontSize="Small"/>
        <Label Text="登录时间：" FontSize="Medium" />
        <Label Text="{Binding Item.LoginTime}" FontSize="Small"/>
    </StackLayout>

</ContentPage>