<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TsinghuaNet.CrossPlatform.Views.InfoPage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Column="0" Grid.Row="0" Margin="8">用户：</Label>
            <Label Grid.Column="1" Grid.Row="0" Margin="8" Text="{Binding OnlineUser.Username}"/>
            <Label Grid.Column="2" Grid.Row="0" Margin="8">时长：</Label>
            <Label Grid.Column="3" Grid.Row="0" Margin="8" Text="{Binding OnlineTime}"/>
            <Label Grid.Column="0" Grid.Row="1" Margin="8">流量：</Label>
            <Label Grid.Column="1" Grid.Row="1" Margin="8" Text="{Binding OnlineUser.Flux,Converter={StaticResource FluxStringConverter}}"/>
            <Label Grid.Column="2" Grid.Row="1" Margin="8">余额：</Label>
            <Label Grid.Column="3" Grid.Row="1" Margin="8" Text="{Binding OnlineUser.Balance,Converter={StaticResource BalanceStringConverter}}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>