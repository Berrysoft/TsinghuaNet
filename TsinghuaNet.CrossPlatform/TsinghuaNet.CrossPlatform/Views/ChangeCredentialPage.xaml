<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TsinghuaNet.CrossPlatform.Views.ChangeCredentialPage"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="Confirm" Text="确定"/>
    </ContentPage.ToolbarItems>
    <StackLayout Orientation="Vertical" Padding="16">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Column="0" Grid.Row="0" HorizontalTextAlignment="End" VerticalOptions="Center">用户名：</Label>
            <Entry Grid.Column="1" Grid.Row="0" Text="{Binding Username}"/>
            <Label Grid.Column="0" Grid.Row="1" HorizontalTextAlignment="End" VerticalOptions="Center">密码：</Label>
            <Entry Grid.Column="1" Grid.Row="1" IsPassword="True" Text="{Binding Password}"/>
        </Grid>
    </StackLayout>
</ContentPage>