<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="TsinghuaNet.Avalonia.ConnectionWindow"
        Width="320" Height="160" Title="管理连接" Icon="resm:TsinghuaNet.Avalonia.Logo.ico" CanResize="True" WindowStartupLocation="CenterScreen">
  <DataGrid Name="ConnectionView" Margin="8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" CanUserResizeColumns="True" CanUserSortColumns="True" CanUserReorderColumns="False">
    <DataGrid.Columns>
      <DataGridTextColumn Header="IP地址" Binding="{Binding Address}"/>
      <DataGridTextColumn Header="登录时间" Binding="{Binding LoginTime}"/>
      <DataGridTextColumn Header="客户端" Binding="{Binding Client}"/>
    </DataGrid.Columns>
    <DataGrid.ContextMenu>
      <ContextMenu>
        <MenuItem Command="{Binding DropSelection}" Header="下线选中项"/>
      </ContextMenu>
    </DataGrid.ContextMenu>
  </DataGrid>
</Window>
